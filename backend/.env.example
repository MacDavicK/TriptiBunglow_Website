# ============================================
# Backend Environment Variables
# Copy to .env and fill in values
# ============================================

# --- DAY 1-2 (Required for initial development) ---

# MongoDB Atlas connection string
# Get from: https://cloud.mongodb.com → Connect → Drivers → Node.js
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/thane-bungalow?retryWrites=true&w=majority

# Server
PORT=5000
NODE_ENV=development

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_ACCESS_SECRET=generate_64_char_random_string_here
JWT_REFRESH_SECRET=generate_different_64_char_random_string_here

# Encryption key for customer ID numbers (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=generate_32_byte_hex_string_here

# Frontend URL (for CORS whitelist)
FRONTEND_URL=http://localhost:5173

# --- DAY 6-8 (Required for integrations) ---

# Razorpay (get from: https://dashboard.razorpay.com → Settings → API Keys)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# Google Calendar (service account JSON path)
GOOGLE_SERVICE_ACCOUNT_PATH=./config/google-service-account.json
GOOGLE_CALENDAR_ID=your_father_calendar_id@gmail.com

# Cloudinary (get from: https://console.cloudinary.com/settings/c-xxxx/api-keys)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=xxxxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# Resend (get from: https://resend.com/api-keys)
RESEND_API_KEY=re_xxxxxxxxxxxx
FROM_EMAIL=bookings@yourdomain.com

# --- ADMIN SEED DATA ---
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_strong_password
ADMIN_NAME=Admin
